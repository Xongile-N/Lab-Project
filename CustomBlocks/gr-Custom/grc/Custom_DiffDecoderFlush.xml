<?xml version="1.0"?>
<block>
  <name>Differential Decoder with Flushing</name>
  <key>Custom_DiffDecoderFlush</key>
  <category>[Custom]</category>
  <import>import Custom</import>
  <make>Custom.DiffDecoderFlush($modulus, $flush, $flushLength)</make>
  <param>
    <name>Flush Encoder</name>
    <key>flush</key>
    <value>False</value>
    <type>bool</type>
    <option>
      <name>Yes</name>
      <key>True</key>
    </option>
    <option>
      <name>No</name>
      <key>False</key>
    </option>
  </param>
  <param>
    <name>Modulus</name>
    <key>modulus</key>
    <type>int</type>
  </param>
  <param>
    <name>Bytes to Flush after</name>
    <key>flushLength</key>
    <value>0</value>
    <type>int</type>
  </param>
  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>byte</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>byte</type>
  </source>
</block>
